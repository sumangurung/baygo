  %tr 
    %th
      %p{:class => 'vertical_text'} Not Important
    %td= render 'tasks_in_quadrant', :tasks => Task.items_in_quadrant_3, :quadrant => 3
    %td= render 'tasks_in_quadrant', :tasks => Task.items_in_quadrant_4, :quadrant => 4

