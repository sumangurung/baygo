    %th{:class => 'side_header'}
    %th{:class => 'top_header'} Urgent
    %th{:class => 'top_header'} Not Urgent
  %tr
    %th
      %p{:class => 'vertical_text'} Important
    %td= render 'tasks_in_quadrant', :tasks => Task.items_in_quadrant_1, :quadrant => 1
